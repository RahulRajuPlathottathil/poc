{
  "type": "object",
  "required": ["userId", "name", "email", "phoneNumbers", "addresses"],
  "properties": {
    "userId": { "type": "string" },
    "name": {
      "type": "object",
      "required": ["first", "last"],
      "properties": {
        "first": { "type": "string" },
        "last": { "type": "string" }
      }
    },
    "email": { "type": "string", "format": "email" },
    "phoneNumbers": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "number"],
        "properties": {
          "type": { "type": "string", "enum": ["mobile", "work", "home"] },
          "number": { "type": "string" }
        }
      },
      "minItems": 1
    },
    "addresses": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "line1", "city", "state", "zip", "country"],
        "properties": {
          "type": { "type": "string" },
          "line1": { "type": "string" },
          "line2": { "type": "string" },
          "city": { "type": "string" },
          "state": { "type": "string" },
          "zip": { "type": "string" },
          "country": { "type": "string" }
        }
      }
    },
    "preferences": {
      "type": "object",
      "properties": {
        "notifications": {
          "type": "object",
          "properties": {
            "email": { "type": "boolean" },
            "sms": { "type": "boolean" },
            "push": { "type": "boolean" }
          }
        },
        "theme": { "type": "string", "enum": ["light", "dark"] },
        "language": { "type": "string" }
      }
    },
    "orders": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["orderId", "date", "items", "totalAmount"],
        "properties": {
          "orderId": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["productId", "name", "price", "quantity"],
              "properties": {
                "productId": { "type": "string" },
                "name": { "type": "string" },
                "price": { "type": "number" },
                "quantity": { "type": "integer" }
              }
            }
          },
          "totalAmount": { "type": "number" }
        }
      }
    }
  }
}
